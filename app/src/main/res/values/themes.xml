<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.IPTVPlayerLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorToolbar">@color/th_gray_light</item>
        <item name="fabBackgroundColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="actionOverflowButtonStyle">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/gray_light</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabLayoutBackground">@color/white</item>
        <item name="tabContentBackground">@color/white</item>
        <item name="bottomNavigationTheme">@style/BottomNavigationThemeLight</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="cardBackgroundColor">#eeeeee</item>
        <item name="alertDialogTheme">@style/AlertDialogThemeLight</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.IPTVPlayerDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorToolbar">@color/th_gray_light</item>
        <item name="fabBackgroundColor">@color/gray_light</item>
        <item name="android:windowBackground">@color/gray_darker</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/gray_light</item>
        <item name="tabIndicatorColor">@color/accentColor</item>
        <item name="tabLayoutBackground">@color/th_gray_light</item>
        <item name="tabContentBackground">@color/gray_darker</item>
        <item name="bottomNavigationTheme">@style/BottomNavigationThemeDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
        <item name="cardBackgroundColor">@color/th_gray_light</item>
        <item name="alertDialogTheme">@style/AlertDialogThemeDark</item>
        

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
    <style name="AlertDialogThemeDark" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/DialogButtonsStyleDark</item>
    </style>
    <style name="AlertDialogThemeLight" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/DialogButtonsStyleLight</item>
    </style>
    <style name="DialogButtonsStyleDark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="DialogButtonsStyleLight" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000</item>
    </style>
    <style name="Theme.IPTVPlayerDark.FullScreen" parent="Theme.IPTVPlayerDark">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="Theme.IPTVPlayerLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BottomNavigationThemeDark">
        <item name="backgroundTint">@color/th_gray_light</item>
        <item name="colorOnSurface">@color/gray_light</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="BottomNavigationThemeLight">
        <item name="backgroundTint">@color/white</item>
        <item name="colorOnSurface">@color/gray_dark</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomSheetStyleDark">
        <item name="background">@drawable/bottom_sheet_dialog_shape_dark</item>
    </style>
    <style name="BottomSheetStyleLight">
        <item name="background">@drawable/bottom_sheet_dialog_shape_light</item>
    </style>
</resources>